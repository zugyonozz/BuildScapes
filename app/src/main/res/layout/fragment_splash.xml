<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_brand_anim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_brand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"/>

    <TextView
        android:id="@+id/tv_brand_invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginStart="-20dp"
        app:layout_constraintStart_toEndOf="@id/iv_brand_anim"
        app:layout_constraintTop_toTopOf="@id/iv_brand_anim"
        app:layout_constraintBottom_toBottomOf="@id/iv_brand_anim"/>

</androidx.constraintlayout.widget.ConstraintLayout>
