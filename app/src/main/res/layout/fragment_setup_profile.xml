<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill Your Profile"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />

        <FrameLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                android:padding="2dp"
                android:background="@drawable/bg_circle_white"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp"
                android:layout_gravity="bottom|end"
                android:elevation="4dp"/>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFullName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/layoutAvatar">

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Full Name"
                android:paddingHorizontal="16dp"
                android:inputType="textPersonName"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDisplayName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardFullName">

            <EditText
                android:id="@+id/etDisplayName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Display Name"
                android:paddingHorizontal="16dp"
                android:inputType="textPersonName"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardDisplayName">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Phone Number"
                android:paddingHorizontal="16dp"
                android:inputType="phone"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardPhone">

            <EditText
                android:id="@+id/etProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Email"
                android:paddingHorizontal="16dp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="CONTINUE"
            app:cornerRadius="30dp"
            app:backgroundTint="#1A1A1A"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardEmail"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>