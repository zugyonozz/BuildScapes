<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageStyle"
                android:padding="2dp"
                android:background="@drawable/bg_circle_white"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp"
                android:layout_gravity="bottom|end"
                android:elevation="4dp"/>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFirstName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/layoutAvatar">

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="First Name"
                android:paddingHorizontal="16dp"
                android:inputType="textPersonName"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLastName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardFirstName">

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Last Name"
                android:paddingHorizontal="16dp"
                android:inputType="textPersonName"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardLastName">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Phone Number"
                android:paddingHorizontal="16dp"
                android:inputType="phone"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:strokeWidth="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardPhone">

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@null"
                android:hint="Bio / Description"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="5"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SAVE CHANGES"
            app:cornerRadius="30dp"
            app:backgroundTint="#1A1A1A"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardBio"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>