<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"
        android:background="#FAFAFA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently logged in as:"
            android:textSize="12sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/tvSettingsEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@email.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/menuEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security &amp; Privacy"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About BuildScapes"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

</LinearLayout>