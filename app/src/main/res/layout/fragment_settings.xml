<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"
        android:background="#FAFAFA"/>

    <TextView
        android:id="@+id/menuEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuSecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/security"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:drawableTint="#BDBDBD"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/menuLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

</LinearLayout>