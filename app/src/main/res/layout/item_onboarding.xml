<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivOnboardingBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHeight_percent="0.7"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_curved_top_white"
        android:padding="32dp"
        android:layout_marginTop="-64dp"
        app:layout_constraintTop_toBottomOf="@id/ivOnboardingBg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tvOnboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore inspiring home designs..."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="serif"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvOnboardingDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover interior layouts that bring comfort."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvOnboardingTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>